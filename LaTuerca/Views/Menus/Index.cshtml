@model IEnumerable<LaTuerca.Models.Menu>

@{
    ViewBag.Title = "Menú";
}

<section class="content">
    <div class="row">
        <div class="col-lg-10">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="im-menu"></i> @ViewBag.Title
                    </h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table table-condensed table-hover table-striped" id="tablaMenu">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Id)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PadreId)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Nombre)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Descripcion)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Action)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Controller)
                                            </th>
                                            <th class="col-lg-1"></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PadreId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nombre)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Action)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Controller)
                                                </td>
                                                <td class="col-lg-1">
                                                    <div class="btn-group btn-group-justified">
                                                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "ion-edit btn btn-warning btn-xs", @data_original_title = "Editar" })
                                                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "ion-eye btn btn-primary btn-xs", @data_original_title = "Ver" })
                                                        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "ion-android-delete btn btn-danger btn-xs", @data_original_title = "Eliminar" })
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
        <div class="col-lg-2">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Navegación</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <a href="@Url.Action("Create", "Menus")" class="btn btn-block btn-social btn-tumblr">
                        <i class="im-menu"></i> Crear
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>