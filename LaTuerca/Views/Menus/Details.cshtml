@model LaTuerca.Models.Menu

@{
    ViewBag.Title = "Detalles";
}
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-lg-10">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="im-menu"></i> @ViewBag.Title
                    </h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.PadreId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.PadreId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Action)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Action)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Controller)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Controller)
                        </dd>

                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Navegación</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <a href="@Url.Action("Edit", "Menus", new { id = Model.Id })" class="btn btn-block btn-social btn-warning">
                        <i class="im-pen"></i> Modificar menú
                    </a>
                    <a href="@Url.Action("Index", "Menus")" class="btn btn-block btn-social btn-tumblr">
                        <i class="im-menu"></i> Ir a la lista de menú
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>