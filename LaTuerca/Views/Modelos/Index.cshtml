@model IEnumerable<LaTuerca.Models.Modelo>

@{
    ViewBag.Title = "Modelo";
}

<section class="content">
    <div class="row">
        @if (!Html.ViewData.ModelState.IsValid)
        {
            <div class="col-lg-12" id="mensaje">
                <div class="callout callout-success">
                    @Html.ValidationSummary()
                </div>
            </div>
        }
        <div class="col-lg-2">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">Submenú</h3>
                    <div class="box-tools">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body no-padding">
                    <ul class="nav nav-pills nav-stacked">
                        <li>
                            <a href="@Url.Action("Create", "Modelos")">
                                <i class="im-plus"></i> Nuevo
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /. box -->
        </div>
        <div class="col-lg-10">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="im-menu"></i> @ViewBag.Title
                    </h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table table-condensed table-hover table-striped" id="tablaModelo">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.NombreModelo)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Estado)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NombreModelo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Estado)
                                                </td>
                                                <td class="col-lg-1">
                                                    <div class="btn-group btn-group-justified">
                                                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "ion-edit btn btn-warning btn-xs", @data_original_title = "Editar" })
                                                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "ion-eye btn btn-primary btn-xs", @data_original_title = "Ver" })
                                                        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "ion-android-delete btn btn-danger btn-xs", @data_original_title = "Eliminar" })
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </div>
</section>
